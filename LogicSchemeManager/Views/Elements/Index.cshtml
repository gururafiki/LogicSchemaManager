@model IEnumerable<LogicSchemeManager.Models.Element>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElementType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schema.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ElementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ElementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ElementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
